<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Register Patient</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/geolocation.js" defer></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="form-container">
    <h2>Patient Registration</h2>
    <form action="/register/patient" method="POST">
      <label>Name<input name="name" required></label>
      <label>Email<input name="email" type="email" required></label>
      <label>Password<input name="password" type="password" required></label>
      <label>Medication<textarea name="medication"></textarea></label>
      <label>Diagnosis<textarea name="diagnosis"></textarea></label>
      <input type="hidden" name="lat" id="lat">
      <input type="hidden" name="lng" id="lng">
      <button class="btn" type="submit">Register</button>
    </form>
    <p>Already have account? <a href="/login/patient">Login</a></p>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
