<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Activity Log</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h2>Activity Log</h2>
    <% logs.forEach(l => { %>
      <div class="request-item">
        <p><strong><%= l.actor ? l.actor.name : 'System' %></strong> — <%= l.action %> — <%= l.targetRole %> — <%= new Date(l.createdAt).toLocaleString() %></p>
      </div>
    <% }) %>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
