<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Register Doctor</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/geolocation.js" defer></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="form-container">
    <h2>Doctor Registration</h2>
    <form action="/register/doctor" method="POST" enctype="multipart/form-data">
      <label>Name<input name="name" required></label>
      <label>Email<input name="email" type="email" required></label>
      <label>Password<input name="password" type="password" required></label>
      <label>Specialization<input name="specialization"></label>
      <label>License Number<input name="licenseNumber" required></label>
      <label>Upload License<input name="licenseFile" type="file" accept="image/*,application/pdf"></label>
      <input type="hidden" name="lat" id="lat">
      <input type="hidden" name="lng" id="lng">
      <button class="btn" type="submit">Register</button>
    </form>
    <p>Already have account? <a href="/login/doctor">Login</a></p>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
